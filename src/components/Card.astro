---
import { bio } from "../bio";

const { shortName, image,alt, designation, about } = bio;
---

<div class="profile-card">
	<div class="wrapper">
		<img alt={alt} src={image} />
		<div></div>
		<div></div>
		<div></div>
		<div></div>
	</div>
	<h2>Hi, I am {shortName}</h2>
	<h1>{designation}</h1>
	<p>{about}</p>
</div>
<style>
	.profile-card {
		padding: 1.5rem 0.5rem;
		cursor: default;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		/*position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);*/
		width: 100%;
		max-width: 740px;
	}

	div.wrapper {
		position: relative;
		max-width: 100%;
		max-height: 100%;
		overflow: visible;
		z-index: -1;
	}

	.wrapper > div {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 100%;
		height: 100%;
		border: 2px solid var(--color-grey);
		border-radius: 50%;
		opacity: 0.15;
		animation: grow 4s ease infinite;
	}

	.wrapper > div:nth-of-type(1) {
		width: 150%;
		height: 150%;
	}

	.wrapper > div:nth-of-type(2) {
		width: 225%;
		height: 225%;
		animation-delay: 500ms;
	}

	.wrapper > div:nth-of-type(3) {
		width: 300%;
		height: 300%;
		animation-delay: 1000ms;
	}

	.wrapper > div:nth-of-type(4) {
		width: 375%;
		height: 375%;
		animation-delay: 1500ms;
	}

	@keyframes grow {
		0% {
			opacity: 0;
			transform: translate(-50%, -50%) scale(0.9);
		}

		40%,
		50% {
			opacity: 0.25;
			transform: translate(-50%, -50%) scale(1);
		}

		100% {
			opacity: 0;
		}
	}

	img {
		width: 12.5rem;
		height: 12.5rem;
		border-radius: 50%;
		box-shadow: 10px 10px 100px 50px rgba(148, 148, 148, 0.15);
	}

	h2,
	h1 {
		text-align: center;
		/*background: radial-gradient(
			100% 495.92% at 64.66% 0%,
			#3e3e3e 0%,
			#ffffff 50%,
			#525252 100%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-fill-color: transparent;*/
	}

	h1 {
		font-weight: 900;
		background: linear-gradient(
			261.26deg,
			#8e8e8e 3.96%,
			#ffffff 50.9%,
			#939393 97.85%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 300% 300%;
		border-radius: 0.4rem;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
			background-position-x: 0%;
		}
		50% {
			background-position-y: 100%;
			background-position-x: 100%;
		}
	}

	h1 {
		font-weight: 700;
	}

	h2 {
		font-weight: 500;
	}

	p {
		text-align: center;
		line-height: 2rem;
	}
</style>

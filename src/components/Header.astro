---
import { bio } from "../bio";

const { email, socials } = bio;
---

<header>
    <a class="email" href={`mailto:${email}`}>
        <img src="/public/mail.svg" />
        Get in touch
    </a>
    <ul>
        {
            socials.map((social, index, arr) => {
                const { name, url, icon } = social;
                return (
                    <>
                        <li>
                            <a href={url} target="_blank">
                                <span>{name}</span>
                                <img src={icon} />
                            </a>
                        </li>
                        {index < arr.length - 1 && (
                            <img
                                class="separator"
                                src="/public/separator.svg"
                            />
                        )}
                    </>
                );
            })
        }
    </ul>
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        width: 100%;
        position: absolute;
        top: 3rem;
        padding-inline: 3rem;
    }

    @media screen and (max-width: 576px) {
        header {
            padding-inline: 1.5rem;
        }
    }

    ul {
        list-style: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    li {
        padding-inline: 0.5rem;
    }

    a {
        color: var(--color-white);
        text-decoration: none;
    }

    a span {
        display: none;
    }

    li a img {
        display: block;
    }

    img.separator {
        display: none;
    }

    @media screen and (min-width: 992px) {
        a span {
            display: block;
        }

        li a img {
            display: none;
        }

        img.separator {
            display: block;
        }

        li {
            padding: 1rem;
        }
    }

    a.email {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
</style>

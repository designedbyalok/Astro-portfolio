---
import SpotifyWidget from "./SpotifyWidget.astro";
---

<header>
    <SpotifyWidget />
</header>

<style>
    header {
        display: flex;
        justify-content: flex-end;
        width: 100%;
        position: absolute;
        top: 3rem;
        padding-inline: 3rem;
        z-index: 20;
    }

    @media screen and (max-width: 576px) {
        header {
            padding-inline: 1.5rem;
        }
    }

    ul {
        list-style: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    li {
        padding-inline: 0.5rem;
    }

    a {
        color: var(--color-white);
        text-decoration: none;
    }

    a:hover{
        color: #b7b7b7
    }

    a span {
        display: none;
    }

    li a img {
        display: block;
    }

    img.separator {
        display: none;
    }

    @media screen and (min-width: 992px) {
        a span {
            display: block;
        }

        li a img {
            display: none;
        }

        img.separator {
            display: block;
        }

        li {
            padding: 1rem;
        }
    }
}
</style>

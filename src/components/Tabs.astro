---
import { bio } from "../bio";

const { tabs } = bio;
---

<div>
    {
        tabs.map((tab) => {
            const { url, name } = tab;
            if (name === "Blogs") {
                return <a href="/blog">{name} </a>;
            }
            return <a href={url} target="_blank">{name} </a>;
        })
    }
</div>
<style>
    div {
        display: flex;
        justify-content: center;
        align-items: center;
        border: 2px solid;
        padding: 0.5rem 0.5rem;
        gap: 1rem;
        background: rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        border-radius: 100px;
        border: 2px solid rgba(99, 99, 99, 0.5);
        );
        width: fit-content;
    }
    
    @media screen and (max-width: 576px) {
        div {
            gap: 0;
            justify-content: space-evenly;
        }
    }

    div a {
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: var(--color-dull);
        font-weight: 500;
        border: 2px solid transparent;
        border-radius: 100px;
        transition: 0.34s;
    }

    div a:hover {
        background: linear-gradient(
            123.29deg,
            rgba(81, 81, 81, 0.28) 23.34%,
            rgba(250, 250, 250, 0.38) 78.64%
        );
        border-color: #afbac7;
        box-shadow: 2px 10px 30px rgba(216, 216, 216, 0.25);
        color: var(--color-white)
    }
</style>

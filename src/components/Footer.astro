---
import { bio } from "../bio";
const { socials } = bio;
---
<footer>
  <div class="footer-socials">
    {socials.filter(social => social.name !== "Peerlist").map((social) => (
      <a href={social.url} target="_blank" rel="noopener noreferrer">
        <img src={social.icon} alt={social.alt} />
      </a>
    ))}
  </div>
</footer>
<style>
footer {
  padding: 1.2rem 0 0.5rem 0;
  margin-top: auto;
  width: 100%;
  text-align: center;
  font-size: 1rem;
  line-height: 1.5rem;
  cursor: default;
  background: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}
.footer-socials {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1.2rem;
  margin-bottom: 0.5rem;
}
.footer-socials a img {
  width: 28px;
  height: 28px;
  filter: brightness(0) invert(1);
  transition: transform 0.2s;
}
.footer-socials a:hover img {
  transform: scale(1.13);
}
</style>

  margin: 0;
  --astro-gradient: linear-gradient(107.56deg, #010101 0%, #131313 47.92%, #000000 100%);
  font-family: 'Roobert', Arial, sans-serif;
  color: #e3e3e3;
}
.blog-container {
  max-width: 900px;
  margin: 0 auto;
  padding: 2rem 1rem 0 1rem;
  min-height: 100vh;
}
.tab-breadcrumb {
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(5px);
  border-radius: 100px;
  padding: .5rem .5rem;
  font-size: 1.25rem;
  margin-bottom: 2rem;
  margin-left: auto;

  box-sizing: border-box;
  border: 1.5px solid #35363a;
  position: relative;
}
.search-bar svg {
  margin-right: 0.7rem;
  width: 22px;
  height: 22px;
}
.search-bar input {
  background: transparent;
  border: none;
  outline: none;
  color: #e3e3e3;
  font-size: 1rem;
  width: 100%;
  padding: 0.3rem 0;
}
.search-bar .clear-btn {
  position: absolute;
  right: 1.2rem;
  top: 50%;

  font-size: 1.2rem;
  font-weight: 400;
  padding: 0 0.3rem;
}
.blog-header {
  text-align: center;
  margin-bottom: 1.5rem;
}
.blog-header h1 {
  font-size: 2rem;
  font-weight: 700;
  margin: 0 0 0.7rem 0;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}
.blog-header .emoji {
  font-size: 1.5rem;
}

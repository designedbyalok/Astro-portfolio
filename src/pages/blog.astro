}
.blog-card:hover {
  background: #232325;
  border-radius: 1.2rem;
  border: 1px solid #4a4a4a;
  cursor: pointer;
}
.blog-content {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
